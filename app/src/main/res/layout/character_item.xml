<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="characterItem"
            type="com.owow.characterapp.data.model.Result" />

        <import type="android.view.View" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_bath"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintGuide_percent="0.63"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="7dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:customImagePath="@{characterItem.image}"
                    app:placeholder="@{@drawable/ic_no_image}" />
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_name"
                style="@style/ItemNameTextAppearance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@{characterItem.name}"
                android:textAlignment="textStart"
                app:layout_constraintBottom_toTopOf="@+id/text_status"
                app:layout_constraintLeft_toRightOf="@+id/card_image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_status"
                style="@style/ItemTextAppearance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{characterItem.status}"
                android:textAlignment="textStart"
                app:layout_constraintBottom_toTopOf="@+id/text_gender"
                app:layout_constraintEnd_toEndOf="@+id/text_name"
                app:layout_constraintStart_toStartOf="@+id/text_name"
                app:layout_constraintTop_toBottomOf="@+id/text_name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_gender"
                style="@style/ItemTextAppearance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{characterItem.gender}"
                android:textAlignment="textStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/gl_bath"
                app:layout_constraintStart_toStartOf="@+id/text_name"
                app:layout_constraintTop_toBottomOf="@+id/text_status" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_species"
                style="@style/ItemTextAppearance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{characterItem.species}"
                android:textAlignment="textEnd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/gl_bath"
                app:layout_constraintTop_toBottomOf="@+id/text_status" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>